<?xml version="1.0" encoding="utf-8"?>
<com.jsmosce.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.jsmosce.view.TitleView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="忘记密码" />

    <com.jsmosce.view.percentsuppor.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_marginTopPercent="@string/app_dp_60"
        app:layout_paddingLeftPercent="@string/app_dp_15"
        app:layout_paddingRightPercent="@string/app_dp_15">

        <com.jsmosce.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_heightPercent="@string/app_dp_40">

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:maxEms="11"
                android:padding="0dp"
                android:textCursorDrawable="@null"
                app:layout_marginLeftPercent="@string/app_dp_10"
                app:layout_textSizePercent="@string/app_dp_14" />

        </com.jsmosce.view.percentsuppor.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            app:layout_heightPercent="@string/app_dp_1" />


        <com.jsmosce.view.percentsuppor.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jsmosce.view.percentsuppor.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_heightPercent="@string/app_dp_40"
                app:layout_marginTopPercent="@string/app_dp_20">


                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:maxEms="11"
                    android:padding="0dp"
                    android:textCursorDrawable="@null"
                    app:layout_marginLeftPercent="@string/app_dp_10"
                    app:layout_textSizePercent="@string/app_dp_14"
                    app:layout_widthPercent="@string/app_dp_250" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_heightPercent="@string/app_dp_30"
                    android:background="@color/colorGray"
                    app:layout_widthPercent="@string/app_dp_1" />

                <TextView
                    android:id="@+id/register_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="获取验证码"
                    android:textColor="@color/colorBlack"
                    app:layout_marginLeftPercent="@string/app_dp_14"
                    app:layout_textSizePercent="@string/app_dp_14" />

            </com.jsmosce.view.percentsuppor.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGray"
                app:layout_heightPercent="@string/app_dp_1" />


            <com.jsmosce.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_heightPercent="@string/app_dp_40"
                app:layout_marginTopPercent="@string/app_dp_20">


                <EditText
                    android:id="@+id/register_password_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入新密码"
                    android:inputType="phone"
                    android:maxEms="11"
                    android:padding="0dp"
                    android:textCursorDrawable="@null"
                    app:layout_marginLeftPercent="@string/app_dp_14"
                    app:layout_textSizePercent="@string/app_dp_14" />

            </com.jsmosce.view.percentsuppor.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGray"
                app:layout_heightPercent="@string/app_dp_1" />

            <com.jsmosce.view.percentsuppor.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_heightPercent="@string/app_dp_40"
                app:layout_marginTopPercent="@string/app_dp_20">


                <EditText
                    android:id="@+id/register_password_senond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请确认新密码"
                    android:inputType="phone"
                    android:maxEms="11"
                    android:padding="0dp"
                    android:textCursorDrawable="@null"
                    app:layout_marginLeftPercent="@string/app_dp_10"
                    app:layout_textSizePercent="@string/app_dp_14" />

            </com.jsmosce.view.percentsuppor.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGray"
                app:layout_heightPercent="@string/app_dp_1" />

            <Button
                android:id="@+id/Login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/colorBlack"
                app:layout_heightPercent="@string/app_dp_43"
                app:layout_marginTopPercent="@string/app_dp_24"
                app:layout_textSizePercent="@string/app_dp_18" />

        </com.jsmosce.view.percentsuppor.PercentLinearLayout>


    </com.jsmosce.view.percentsuppor.PercentLinearLayout>
</com.jsmosce.view.percentsuppor.PercentLinearLayout>