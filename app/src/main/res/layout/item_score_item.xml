<?xml version="1.0" encoding="utf-8"?>
<com.jsmosce.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_select_room_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_heightPercent="@string/app_dp_60">

        <com.jsmosce.view.percentsuppor.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:layout_heightPercent="@string/app_dp_60">

            <TextView
                android:id="@+id/item_score_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="项目名称"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                app:layout_textSizePercent="@string/app_dp_16"
                app:layout_widthPercent="@string/app_dp_180" />

            <TextView
                android:id="@+id/item_score_ev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                app:layout_textSizePercent="@string/app_dp_15"
                android:gravity="center"
                app:layout_widthPercent="@string/app_dp_180"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </com.jsmosce.view.percentsuppor.PercentRelativeLayout>

    </android.support.v7.widget.CardView>

</com.jsmosce.view.percentsuppor.PercentLinearLayout>