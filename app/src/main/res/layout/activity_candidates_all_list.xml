<?xml version="1.0" encoding="utf-8"?>
<com.jsmosce.view.percentsuppor.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.jsmosce.activity.CandidatesAllListActivity">

    <com.jsmosce.view.TitleView
        android:id="@+id/candidates_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="所有考生" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:layout_below="@+id/candudates_title"
        android:queryHint="请输入搜索内容" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/candidates_all_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/candidates_title"
        android:background="@color/colorGrayLight" />

</com.jsmosce.view.percentsuppor.PercentLinearLayout>
